# -*- rpm-spec -*-

Summary:        RRD daemon plugin library
Name:           rrdd-plugin-legacy
Version:        @PT_VERSION@
Release:        @RPM_RELEASE@
License:        LGPL+linking exception
Group:          System/Hypervisor
URL:            https://github.com/xapi-project/rrdd-plugin-legacy
Source0:        rrdd-plugin-legacy-%{version}.tar.bz2
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}

%description
RRD daemon plugin library

%package        devel
Summary:        Development files for %{name}
Group:          Development/Other
#Requires:       %{name} = %{version}-%{release}

%description    devel
The %{name}-devel package contains libraries and signature files for
developing applications that use %{name}.

%prep
%setup -q

%build
mkdir -p $RPM_BUILD_ROOT
DESTDIR=$RPM_BUILD_ROOT %{__make}

%install
mkdir -p %{buildroot}%{_libdir}/ocaml
export OCAMLFIND_DESTDIR=%{buildroot}%{_libdir}/ocaml
DESTDIR=$RPM_BUILD_ROOT %{__make} install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_libdir}/ocaml/rrdd-plugin/META
%{_libdir}/ocaml/rrdd-plugin/rrdp_common.cmi
%{_libdir}/ocaml/rrdd-plugin/rrdd_plugin.cma

%files devel
%defattr(-,root,root)
%doc README.md
%{_libdir}/ocaml/rrdd-plugin/rrdd_plugin.a
%{_libdir}/ocaml/rrdd-plugin/rrdp_common.cmx
%{_libdir}/ocaml/rrdd-plugin/rrdd_plugin.cmxa

%changelog
